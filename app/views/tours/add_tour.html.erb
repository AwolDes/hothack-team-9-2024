<h1 class="text-lg">Save a new tour</>

<div class="pt-20">
<%= form_with(model: @tour, local: true) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :start_date %>
  <%= f.date_field :start_date %>

  <%= f.label :finish_date %>
  <%= f.date_field :finish_date %>

  <%= f.label :budget %>
  <%= f.text_field :budget %>

  <%= f.submit "Create" %>
<% end %>
