<div class="flex flex-col">

  <div class="mt-5 mx-auto w-1/3">
    <h1 class="text-lg mt-5">Save a new tour</h1>

    <div class="pt-5">
      <%= form_with(model: @tour, local: true) do |f| %>

        <div class="mb-4">
          <div><%= f.label :name, class: "block text-gray-700 text-sm font-bold mb-2" %></div>
          <div><%= f.text_field :name, class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %></div>
        </div>

        <div class="mb-4">
          <div><%= f.label :start_date, class: "block text-gray-700 text-sm font-bold mb-2" %></div>
          <div><%= f.date_field :start_date, class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %></div>
        </div>

        <div class="mb-4">
          <%= f.label :finish_date, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= f.date_field :finish_date, class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>

    </div>
  </div>

  <div class="mx-auto w-1/3">
    <div class="mb-4">
      <%= f.label :budget, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.text_field :budget, class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <%= f.submit "Create", class: "bg-fuchsia-600 rounded-lg hover:bg-fuchsia-500 p-3 text-white font-bold" %>
    <% end %>
  </div>

</div>
