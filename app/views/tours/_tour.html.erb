<div class="col-auto border">
    <div class="row-auto space-x-50 space-y-50">
        <div class="bg-white border border-grey-200 shadow  dark:border-gray-700">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
                <%= content_tag(:div, tour.name, class: 'attribute') %>
            </h5>

            <div>
                Start date: <%= tour.start_date %>
            </div>
    
            <div>
                Finish date: <%= tour.finish_date %>
            </div>

            <div>
                budget: <%= tour.budget %>
            </div>
            
            <div>
                <button>
                   <p class="text-lg text-blue-600">More details</p>
                </button>
            </div>
        </div>
    </div>
</div>
