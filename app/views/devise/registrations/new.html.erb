<div class="sign-up-div flex flex-col gap-4 p-8 items-center">
  <h1 class="text-2xl font-bold text-center">Sign up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field flex flex-col gap-4">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "focus:border-fuchsia-600" %>
      </div>
    
      <div class="field mt-4">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "focus:border-fuchsia-600" %>
      </div>
    
      <div class="field mt-4">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "focus:border-fuchsia-600" %>
      </div>
    
      <div class="actions mt-4 flex justify-center">
        <%= f.submit "Sign up", class: "text-white bg-fuchsia-500 hover:bg-fuchsia-600 focus:ring-4 focus:ring-fuchsia-600 font-medium rounded-lg text-sm px-5 py-2.5 focus:outline-none w-100 cursor-pointer self-centre" %>
      </div>
    </div>
  <% end %>

  <%#= render "devise/shared/links" %>
</div>